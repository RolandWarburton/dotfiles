padding = 2
; Bar size
height = 25
radius = 0
background = ${colors.background}
; Tray
;tray-position = left 

[module/date]
type = internal/date
interval = 1
time = "%I:%M"
time-alt = "%d %B %I:%M"
format-prefix-foreground = ${colors.foreground}
label = %date%%time%

