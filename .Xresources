! Enable ctrl-shift-c and ctrl-shift-v in XTerm
!XTerm*vt100.translations: #override \
!    Shift Ctrl <Key> C: copy-selection(CLIPBOARD) \n\
!    Shift Ctrl <Key> V: insert-selection(CLIPBOARD)


! =======================
!	URxvt Config
! =======================
! Enable some plugins
! clipboard is required for copy/paste
! -removed tabbed
URxvt.perl-ext-common:  default,clipboard

!Turn off the stupid yellow box popup
URxvt.iso14755: false

! Hide tabs when you dont need them
URxvt.tabbed.autohide: true

!Disable the old keybinds for ctrl-shift-c and ctrl-shift-v
URxvt.keysym.Control-Meta-c: builtin-string:
URxvt.keysym.Control-Meta-v: builtin-string:

!Enable ctrl-shift-c and ctrl-shift-v
URxvt.clipboard.autocopy: true
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

! do not scroll with output
URxvt*scrollTtyKeypress: true

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! Cursor blink on
!URxvt.cursorBlink: 1

! Line spacing
!URxvt.lineSpace: 0

! Scrollback
URxvt.saveLines: 200

!rows and columns

!padding
!URxvt.internalBorder:  4

!URxvt.dpi: 96

!fade text on unfocus
URxvt*fading:  15

!Xft.antialias:  true
Xft.dpi:        96
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight
Xft.autohint:   false
Xft.lcdfilter:  lcddefault

!fonts
URxvt.font: xft:Hack-Regular:style=regular:antialias=true:hinting=true
!URxvt.font: xft:DejaVu Sans Mono:antialias=true:hinting=true
!URxvt.font: xft: SourceCodePro-Bold:size=10
!URxvt.letterSpace: 1
!Urxvt.font: Liberation Mono:pixelsize=12:antialias=true:autohint=true
!Urxvt.font: 'Liberation Mono':style=Regular:antialias=true:autohint=true
!URxvt*font: xft:Fira Code:style=Retina:pixelsize=15:antialias=true:hinting=true

! ctrl+left and ctrl+right 
URxvt.keysym.Control-Up:     \033[1;5A
URxvt.keysym.Control-Down:   \033[1;5B
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C

!No scrollbar
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.scrollBar_floating: false
URxvt.scrollstyle: rxvt

